        %input.header__top__box__input/
        %button.header__top__box__button{:type => "submit"}
          %svg.sc-jDwBTQ.sc-bMVAic.hxYxiW{"aria-hidden" => "true", :height => "16", :viewbox => "0 0 16 16", :width => "16"}
