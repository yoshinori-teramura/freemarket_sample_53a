        .header__bottom__left__brand
          %a.header__bottom__left__list__link{:href => "/items/brand/"}
            %svg.header__bottom__left__list__link__svg{"aria-hidden" => "true", :height => "16", :viewbox => "0 0 23 16", :width => "23"}
