.wrapper__head
  .header
    .header__top
      .header__top__logo
        %a.header__top__logo__link{:href => "/items"}
          = image_tag 'mercari_top_header_logo.svg', alt: 'mercari', class: 'header__top__logo__link__image'
          -# %img.header__top__logo__link__image{:alt => "mercari", :src => "https://web-jp-assets.mercdn.net/_next/static/images/logo-acdd90ac4f472d5a6f7a330d33ab1225.svg"}/
